{
  "name": "screenshot-compare",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@10.6.1",
  "description": "A tool for pixel-by-pixel comparison of website screenshots for visual regression testing",
  "author": "Muluk-m",
  "license": "MIT",
  "homepage": "https://github.com/Muluk-m/screenshot-compare#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Muluk-m/screenshot-compare.git"
  },
  "bugs": "https://github.com/Muluk-m/screenshot-compare/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "s2c": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "npx playwright install",
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint",
    "fix": "eslint --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "playground": "pnpm -C playground dev"
  },
  "dependencies": {
    "@qlj/screenshot-compare": "catalog:",
    "chalk": "catalog:",
    "commander": "catalog:",
    "pixelmatch": "catalog:",
    "playwright": "catalog:",
    "pngjs": "catalog:",
    "prompts": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:utils",
    "@types/js-yaml": "catalog:testing",
    "@types/node": "catalog:types",
    "@types/pixelmatch": "catalog:",
    "@types/pngjs": "catalog:",
    "@types/prompts": "catalog:",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "js-yaml": "catalog:testing",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
